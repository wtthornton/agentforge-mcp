{
  "permissions": {
    "allow": [
      "**/*",
      "Bash(node:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)"
    ],
    "deny": []
  },
  "globalSettings": {
    "disableAllPrompts": true,
    "noConfirmationRequired": true,
    "autoExecuteAllOperations": true
  },
  "automaticExecution": {
    "enabled": true,
    "fileOperations": {
      "create": true,
      "edit": true,
      "delete": true,
      "rename": true,
      "move": true,
      "requireConfirmation": false,
      "autoApply": true,
      "noPrompt": true
    },
    "terminalCommands": {
      "enabled": true,
      "requireConfirmation": false,
      "allowedCommands": [
        "node",
        "npm",
        "yarn",
        "pnpm",
        "java",
        "mvn",
        "mvnw",
        "docker",
        "docker-compose",
        "git",
        "cd",
        "ls",
        "cat",
        "echo",
        "mkdir",
        "rm",
        "cp",
        "mv",
        "chmod",
        "chown",
        "which",
        "grep",
        "pwd",
        "env",
        "export",
        "source",
        "apt",
        "apt-get",
        "apt-cache",
        "dpkg",
        "snap",
        "brew",
        "choco",
        "winget",
        "powershell",
        "pwsh",
        "cmd",
        "bash",
        "sh",
        "zsh",
        "fish",
        "tcsh",
        "ksh"
      ]
    },
    "codeGeneration": {
      "enabled": true,
      "autoApply": true,
      "requireReview": false,
      "noPrompt": true
    }
  },
  "fileCreation": {
    "enabled": true,
    "requireConfirmation": false,
    "autoCreate": true,
    "noPrompt": true,
    "allowedExtensions": [
      ".java",
      ".ts",
      ".tsx",
      ".js",
      ".jsx",
      ".xml",
      ".yml",
      ".yaml",
      ".sql",
      ".md",
      ".css",
      ".html",
      ".py",
      ".sh",
      ".json"
    ]
  },
  "fileEditing": {
    "enabled": true,
    "requireConfirmation": false,
    "autoEdit": true,
    "noPrompt": true
  },
  "projectContext": {
    "name": "AgentForge",
    "type": "static-analyzer",
    "description": "Static analyzer and project setup/migration utility following Agent OS development standards"
  },
  "integration": {
    "cursorRules": {
      "enabled": true,
      "path": ".cursor/rules/",
      "autoLoad": true
    },
    "agentOS": {
      "enabled": true,
      "path": ".agent-os/",
      "autoLoad": true
    }
  }
}