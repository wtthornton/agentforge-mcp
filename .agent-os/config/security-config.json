{
  "scanIntervals": {
    "vulnerability": "0 2 * * *",
    "compliance": "0 3 * * *",
    "dependency": "0 4 * * 1"
  },
  "alertThresholds": {
    "critical": 0,
    "high": 5,
    "medium": 20,
    "low": 50
  },
  "complianceFrameworks": [
    "OWASP",
    "NIST",
    "ISO27001",
    "SOC2"
  ],
  "encryptionStandards": {
    "algorithm": "AES-256-GCM",
    "keyLength": 256,
    "ivLength": 16
  },
  "auditSettings": {
    "logLevel": "INFO",
    "retentionDays": 365,
    "realTimeMonitoring": true
  },
  "securityPolicies": {
    "passwordPolicy": {
      "minLength": 12,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireNumbers": true,
      "requireSymbols": true,
      "maxAge": 90
    },
    "sessionPolicy": {
      "timeout": 3600,
      "renewalThreshold": 300,
      "concurrentSessions": 3
    },
    "apiSecurity": {
      "rateLimit": {
        "requestsPerMinute": 1000,
        "burstLimit": 100
      },
      "authentication": {
        "tokenExpiry": 900,
        "refreshTokenExpiry": 86400
      }
    }
  },
  "vulnerabilityManagement": {
    "sources": [
      "NVD",
      "OWASP",
      "Snyk",
      "GitHub Advisory"
    ],
    "severityMapping": {
      "critical": 9.0,
      "high": 7.0,
      "medium": 4.0,
      "low": 0.1
    },
    "autoPatching": {
      "enabled": false,
      "criticalOnly": true,
      "testingRequired": true
    }
  },
  "monitoring": {
    "realTimeAlerts": true,
    "dashboardRefresh": 30000,
    "logAggregation": {
      "enabled": true,
      "sources": ["application", "system", "security"],
      "retention": 90
    },
    "metrics": {
      "authenticationFailures": true,
      "suspiciousActivities": true,
      "performanceAnomalies": true,
      "dataAccessPatterns": true
    }
  }
}