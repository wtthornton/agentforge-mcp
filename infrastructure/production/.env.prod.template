# AgentForge Production Environment Configuration
# Copy this file to .env.prod and update with your production values

# Domain Configuration
DOMAIN_NAME=your-domain.com
APP_VERSION=1.0.0

# Database Configuration
DB_USERNAME=agentforge_prod
DB_PASSWORD=your_secure_database_password_here
DB_HOST=postgres-prod
DB_PORT=5432
DB_NAME=agentforge_prod

# Redis Configuration
REDIS_HOST=redis-prod
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT & Security Configuration
JWT_SECRET=your_jwt_secret_key_at_least_64_characters_long_and_random
JWT_EXPIRATION=900
JWT_REFRESH_EXPIRATION=86400
ENCRYPTION_KEY=your_32_character_encryption_key

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_SECRET_KEY=your_grafana_secret_key

# Email Configuration (for alerts)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@your-domain.com

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_AWS_ACCESS_KEY_ID=your_aws_access_key
BACKUP_AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Performance Configuration
MAX_HEAP_SIZE=1g
MAX_CONNECTIONS=100
REDIS_MAX_MEMORY=256mb

# Security Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_FILES=30
LOG_MAX_SIZE=100MB

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_SECURITY_SCANNING=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_AUTO_SCALING=true

# Third-party Integrations
SENTRY_DSN=your_sentry_dsn_for_error_tracking
DATADOG_API_KEY=your_datadog_api_key
SLACK_WEBHOOK_URL=your_slack_webhook_for_alerts

# Compliance & Audit
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_SCAN_SCHEDULE=0 2 * * *
VULNERABILITY_SCAN_SCHEDULE=0 3 * * *

# Auto-scaling Configuration
MIN_BACKEND_INSTANCES=2
MAX_BACKEND_INSTANCES=6
CPU_SCALE_UP_THRESHOLD=70
CPU_SCALE_DOWN_THRESHOLD=30
MEMORY_SCALE_UP_THRESHOLD=80